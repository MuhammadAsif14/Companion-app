<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToOutline="true">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/mood_blue"
    app:cardCornerRadius="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:paddingTop="11dp"
            android:paddingBottom="6dp"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/images"
            app:srcCompat="@drawable/happy_emoji" />

        <TextView
            android:id="@+id/mood1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/moodcontent"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:text="You have felt happy mostly"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/mood_day1"
            android:layout_below="@+id/mood1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dateday"
            android:text="yesterday"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_marginStart="30dp"
            />

        <TextView
            android:id="@+id/mood_date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mood1"
            android:layout_toEndOf="@id/mood_day1"
            android:text="May,12"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:textSize="8sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>
</LinearLayout>