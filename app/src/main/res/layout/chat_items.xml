<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/chat_content_orange"
        app:cardCornerRadius="200dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/chat_imageView"
                android:paddingTop="9dp"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="7dp"

                app:srcCompat="@drawable/sad_emoji" />

            <TextView
                android:id="@+id/chat1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/chat_imageView"
                android:paddingTop="2dp"
                android:text="Sad"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/text"
                android:layout_below="@+id/chat1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/chat_imageView"
                android:text="Will head too the chat session.."
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginStart="18dp"
                />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>